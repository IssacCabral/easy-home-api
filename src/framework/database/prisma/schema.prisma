model TenantsOnProperties {
  property   Properties @relation(fields: [propertyId], references: [id])
  propertyId String
  tenant     Tenants    @relation(fields: [tenantId], references: [id])
  tenantId   String     @unique

  isMainTenant Boolean @default(false)

  @@id([propertyId, tenantId])
}

model Addresses {
  id            String @id
  addressNumber Int    @db.SmallInt
  street        String @db.VarChar(100)
  lat           Float // todo: tentar ver depois porque esta arredondando
  lon           Float // todo: tentar ver depois porque esta arredondando

  // lat    Decimal @db.Decimal(17, 15)
  // lon    Decimal @db.Decimal(17, 15)

  location Unsupported("geography(Point, 4326)")

  property Properties?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
